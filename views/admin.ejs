<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- link the css page in templates -->
    
    <title>Document</title>
</head>

<body>
    <%- include("templates/header") %>
        <h1 class="d-flex justify-content-center padding">Admin Page</h1>
        <div class="card">
            <div class="d-flex align-items-center p-4 m-3 justify-content-center">
                <table class="table">
                    <thead">
                        <tr>
                            <th scope="col">Username</th>
                            <th scope="col">User Type</th>
                            <th scope="col">Action</th>
                            <th scope="col">Created At</th>
                        </tr>
                        </thead>
                        <tbody>
                            <% for(var user of users) { %>
                                <tr>
                                    <td>
                                        <%= user.username %>
                                    </td>
                                    <td>
                                        <%= user.user_type %>
                                    </td>
                                    <td>
                                        <% if (user.user_type==='user' ) { %>
                                            <%- include("templates/promoteForm", {user_name: user}) %>
                                            <% } else { %>
                                                <%- include("templates/demoteForm", {user_name: user}) %>
                                                <% } %>
                                    </td>
                                    <td>
                                        <%= user.createdAt %>
                                    </td>
                                </tr>
                                <% } %>
                        </tbody>
                </table>
            </div>
        </div>
        <%- include("templates/footer") %>
</body>

</html>